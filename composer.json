{
    "name": "speicher210/open-api-generator",
    "type": "library",
    "description": "Open Api specification generator.",
    "keywords": [
        "openapi"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Dragos Protung",
            "email": "dragos@protung.de"
        },
        {
            "name": "Cezary Stepkowski",
            "email": "cezary.stepkowski@protonmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "cebe/php-openapi": "^1.4",
        "jms/serializer": "^3.7",
        "roave/better-reflection": "^4.2",
        "symfony/form": "^4.4 || ^5.0",
        "symfony/routing": "^4.4 || ^5.0",
        "symfony/validator": "^4.4 || ^5.0",
        "webmozart/assert": "^1.8"
    },
    "conflict": {},
    "require-dev": {
        "doctrine/coding-standard": "^8.1.0",
        "ergebnis/composer-normalize": "^2.6",
        "phpstan/phpstan": "^0.12.37",
        "phpstan/phpstan-deprecation-rules": "^0.12.5",
        "phpstan/phpstan-phpunit": "^0.12.16",
        "phpstan/phpstan-strict-rules": "^0.12.4",
        "phpstan/phpstan-symfony": "^0.12.7",
        "phpstan/phpstan-webmozart-assert": "^0.12.7",
        "phpunit/phpunit": "^9.2.6",
        "psalm/plugin-phpunit": "^0.10.1",
        "roave/security-advisories": "dev-master",
        "slevomat/coding-standard": "^6.3.10",
        "symfony/config": "^4.4 || ^5.0",
        "symfony/var-dumper": "4.4 || ^5.0",
        "thecodingmachine/phpstan-strict-rules": "^0.12.0",
        "vimeo/psalm": "^3.13.1"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Speicher210\\OpenApiGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Speicher210\\OpenApiGenerator\\Tests\\": "tests/"
        }
    },
    "prefer-stable": true,
    "scripts": {
        "analyse": [
            "@analyse-phpstan",
            "@analyse-psalm"
        ],
        "analyse-phpstan": "phpstan analyse",
        "analyse-phpstan-update": "phpstan analyse --generate-baseline",
        "analyse-psalm": "psalm --show-info=false",
        "analyse-psalm-update": "psalm --set-baseline=psalm.baseline.xml",
        "check": [
            "composer validate",
            "composer normalize --dry-run",
            "@cs-check",
            "@analyse",
            "@test"
        ],
        "cs-check": "phpcs -p",
        "cs-fix": "phpcbf -p",
        "test": "phpunit --testdox --color=always"
    }
}
